<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>@ViewData["Title"]</title>
</head>
<body>

<div>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
    @if (User.Identity!.IsAuthenticated)
    {
        <a asp-controller="Panel" asp-action="Create">Create Post</a>
        <a asp-controller="Auth" asp-action="Logout">Sign Out</a>
    }
    else
    {
        <a asp-controller="Auth" asp-action="Login">Sign In</a>
    }
</div>

<div>
    @RenderBody()
</div>

</body>
</html>