@model VerifyEmailViewModel

<div class="verify-email-wrapper container">
    <div class="card verify-email">
        <h2>Please verify your email</h2>
        <p>
            We've sent an email to @Model.Email to verify your email address and activate your account. The link in the email will expire in 24 hours.
        </p>
        <p>
            <a href="/">Click here</a> if you did not recieve an email or would like to change the email address you registered.
        </p>
        <p>
            You can close this page.
        </p>
    </div>
</div>